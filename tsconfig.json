{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "allowJs": false,

    "inlineSourceMap": true,
    "skipLibCheck": true,

    "baseUrl": ".",
    "outDir": "dist",

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"]
}
